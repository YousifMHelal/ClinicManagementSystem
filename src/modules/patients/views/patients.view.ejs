<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>المرضي</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/docs.css" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body style="position: relative;">

    <%- include("../../common/views/navbar.view.ejs") %>
    <%- include("./add.patient.component.view.ejs") %>
    <%- include("./update.patient.component.view.ejs") %>

    <div id="overlayDivId" class="overlay d-none"></div>

    <div class="container-lg">
      <div class="w-100 h-100 p-3 rounded" style="background: rgb(228 220 220 / 80%);">

        <div class="mb-2 d-flex align-items-center justify-content-between">
          <h5>بيانات المرضي</h5>
          <div>
            <input id="patientsSearchInputId" type="search" placeholder="ابحث بالاسم او الرقم العسكري" class="bg-light rounded px-2 py-1" style="border: 1px solid var(--main);font-size: 16px;">
            <select id="degreeSelectId" class="me-2 py-1 rounded fw-bold" style="border: 1px solid var(--main); color: var(--main); font-size: 18px"></select>
          </div>
          <div>
            <button id="printButtonId" class="px-4 py-1 rounded fw-bold" style="border: 1px solid var(--main); color: var(--main); font-size: 18px;">طباعة</button>
            <button id="addNewPatientButtonId" class="px-4 py-1 rounded fw-bold" style="border: 1px solid var(--main); color: var(--main); font-size: 18px">اضافة</button>
          </div>
        </div>

      <div style="max-height: 70vh; overflow-y: scroll; direction: ltr;">
        <table class="table table-hover table-rounded d-rtl text-center mb-0" style="background: rgb(255 254 254 / 31%); ">
          <thead class="fw-bold text-light" style="background: var(--sub); position: sticky; top: -1px;">
            <tr>
              <td>اسم المريض</td>
              <td>الدرجة</td>
              <td>الرقم العسكري</td>
              <td>عدد الزيارات</td>
              <td></td>
            </tr>
          </thead>
          <tbody id="patientsTableBodyId" class="bg-light"></tbody>
        </table>  
      </div>  

      </div>
    </div>

    <script src="/js/axios.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/select.options.js"></script>
    <script src="/js/add.patient.component.js"></script>
    <script src="/js/update.patient.component.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/patients.js"></script>

  </body>
</html>
